<div class="row">
  <div class="col-md-12">
    <h1>Create an Account</h1>
  </div>
</div>

  <%= form_for(@parent) do |f| %>
  <section>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= f.text_field :first_name, class: 'form-control signup', placeholder: 'first name' %>
      </div>
    </div>
  </section>
  <section>
    <div class="row">
      <div class="col-md-12 col sm-12">
        <%= f.text_field :last_name, class: 'form-control signup', placeholder: 'last name' %>
      </div>
    </div>
  </section>
  <section>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= f.email_field :email, class: 'form-control signup', placeholder: 'email' %>
      </div>
    </div>
  </section>
  <section>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= f.text_field :username, class: 'form-control signup', placeholder: 'username' %>
      </div>
    </div>
  </section>
  <section>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= f.password_field :password, class: 'form-control signup', placeholder: 'password' %>
      </div>
    </div>
  </section>
  <section>
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <%= f.password_field :password_confirmation, class: 'form-control signup', placeholder: 'password confirmation' %>
      </div>
    </div>
  </section>
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>

