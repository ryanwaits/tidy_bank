<!DOCTYPE html>
<html>
<head>
  <title>TidyBank</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
<div class="notice">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>
<div class="logged-in">
  <% if flash[:logged_in] %>
    <%= flash[:logged_in] %>
  <% end %>
</div>
<div class="error">
  <% if flash[:error] %>
    <%= flash[:error] %>
  <% end %>
</div>
  <%= yield %>
</div>


</body>
</html>
